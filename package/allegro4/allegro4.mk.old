# 	-$(STRIP) --strip-unneeded $(TARGET_DIR)/usr/lib/liballeg.so

ALLEGRO allegro: $(ALLEGRO4_DIR)/lib/unix/liballeg.a

allegro-clean:
	$(MAKE) DESTDIR=$(TARGET_DIR) CC=$(TARGET_CC) -C $(ALLEGRO4_DIR) uninstall
	-$(MAKE) -C $(ALLEGRO4_DIR) clean

allegro-dirclean:
	rm -rf $(ALLEGRO4_DIR)

